#include <iostream>
using namespace std;

int main() {
    float valorHora, horasTrabalhadas;

    cout << "Digite o valor por hora do trabalhador: ";
    cin >> valorHora;

    cout << "Digite o numero de horas trabalhadas: ";
    cin >> horasTrabalhadas;

    float salarioTotal = valorHora * horasTrabalhadas;
    float descontoIRS = salarioTotal * 0.125;
    float salarioLiquido = salarioTotal - descontoIRS;

    cout << "Salario bruto: " << salarioTotal << " euros" << endl;
    cout << "Desconto IRS (12.5%): " << descontoIRS << " euros" << endl;
    cout << "SalÃ¡rio liquido: " << salarioLiquido << " euros" << endl;

    return 0;
}
