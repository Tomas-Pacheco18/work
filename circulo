#include <iostream>
using namespace std;

int main() {
    float raio;
    const float PI = 3.1415;

    cout << "Digite o raio do circulo: ";
    cin >> raio;

    float perimetro = 2 * PI * raio;
    float area = PI * raio * raio;

    cout << "O perÃ­metro do circulo e: " << perimetro << endl;
    cout << "A area do circulo e: " << area << endl;

    return 0;
}
