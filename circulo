#include <iostream>
using namespace std;

int main() {
    double raio;
    const double PI = 3.14159; // Valor aproximado de π

    cout << "Digite o raio do círculo: ";
    cin >> raio;

    double perimetro = 2 * PI * raio;
    double area = PI * raio * raio; // Alternativa para pow(raio, 2)

    cout << "O perímetro do círculo é: " << perimetro << endl;
    cout << "A área do círculo é: " << area << endl;

    return 0;
}
