#include <iostream>
using namespace std;

int main() {
    double raio;
    const double PI = 3.1415;

    cout << "Digite o raio do circulo: ";
    cin >> raio;

    double perimetro = 2 * PI * raio;
    double area = PI * raio * raio;

    cout << "O perÃ­metro do circulo e: " << perimetro << endl;
    cout << "A area do circulo e: " << area << endl;

    return 0;
}
